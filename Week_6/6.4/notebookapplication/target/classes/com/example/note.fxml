<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.NoteController">
   <children>
      <SplitPane dividerPositions="0.5" prefHeight="300.0" prefWidth="400.0">
         <items>
            <ListView fx:id="noteList" onMouseClicked="#displayNote" prefHeight="200.0" prefWidth="200.0" />
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <TextField fx:id="title" promptText="Title" />
                  <TextArea fx:id="content" prefHeight="310.0" prefWidth="196.0" promptText="Content" />
                  <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#removeFromNote" style="-fx-background-color: red;" text="Remove" textAlignment="CENTER" />
                        <Button mnemonicParsing="false" onAction="#addToNote" text="Add" textAlignment="CENTER" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </items>
      </SplitPane>
   </children>
</AnchorPane>
